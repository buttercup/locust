{
  "name": "@buttercup/locust",
  "version": "1.0.0",
  "description": "Locust Login Toolkit",
  "exports": "./dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && NODE_ENV=production webpack --config=webpack.config.cjs --mode=production",
    "clean": "rimraf dist",
    "dev": "concurrently 'npm run watch' 'npm run serve'",
    "format": "prettier --write '{{source,test}/**/*.js,webpack.config.js}'",
    "prepublishOnly": "run-s build docs",
    "serve": "serve ./dist/ -p 8081",
    "test": "run-s test:web test:integration test:format",
    "test:ci:general": "run-s test:web test:format",
    "test:ci:integration": "run-s test:integration",
    "test:format": "prettier --check '{{source,test}/**/*.js,webpack.config.js}'",
    "test:integration": "npm run build && node test/integration/index.js",
    "test:web": "karma start karma.conf.cjs",
    "test:web:watch": "karma start --auto-watch",
    "watch": "webpack -w --progress"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{{source,test}/**/*.js,webpack.config.js}": [
      "prettier --write"
    ]
  },
  "author": "Perry Mitchell <perry@perrymitchell>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "babel-loader": "^9.1.2",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^7.4.0",
    "eventemitter3": "^4.0.7",
    "husky": "^4.3.8",
    "is-visible": "^2.2.0",
    "karma": "^6.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-firefox-launcher": "^2.1.2",
    "karma-mocha": "^2.0.1",
    "karma-sinon": "^1.0.5",
    "karma-spec-reporter": "^0.0.36",
    "karma-webpack": "^5.0.0",
    "lint-staged": "^13.0.3",
    "mocha": "^10.2.0",
    "nightmare": "^3.0.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^2.7.1",
    "resolve-typescript-plugin": "^2.0.1",
    "rimraf": "^3.0.2",
    "serve": "^14.2.0",
    "sinon": "^15.0.3",
    "ts-loader": "^9.4.2",
    "webpack": "^5.79.0",
    "webpack-cli": "^5.0.1"
  }
}
